<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.PrimaryController">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="Login to HR System" style="-fx-font-size: 20px;"/>
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" />
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
