<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SecondaryController">

    <top>
        <Label fx:id="welcomeLabel" text="Welcome to HR Dashboard"
               style="-fx-font-size: 18px; -fx-padding: 15;" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="Admin Panel" onAction="#openAdmin" />
            <Button text="Employee Panel" onAction="#openEmployee" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button text="Logout" onAction="#logout"/>
            <Button text="Exit" onAction="#exitApp"/>
        </HBox>
    </bottom>
</BorderPane>
